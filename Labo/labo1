import numpy as np 
# use las sig matrices de ej:
A = np.array([[1,4,9],[1,2,3],[1,1,1]])
B = [[1,4,9],[1,2,3],[1,1]] 
print(A)
print(B)


# Ejercicio 1 
def esCuadrada(matriz: list[[]]):
    i = 0
    long = len(matriz[0])
    res = True 
    for i in range(len(matriz)):
        if len(matriz[i]) != long:
            res = False 
    return res 
print(esCuadrada(A.tolist())) # si era array no me dejaba
print(esCuadrada(B))


