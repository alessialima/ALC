def calcularAX(A: list[[]], x: list): 
    A_trans = transpuesta(A)
    b = []
    for i in range(len(A_trans)): 
        a = 0
        for j in range(len(A_trans[i])):
            a += (A_trans[i][j]*x[i])
        b.append(a)
    return b 

# Ejercicio 9: 
def intercambiarFilas(A: list[[]], i: int, j: int):
    new = A[i][:]
    A[i] = A[j][:] 
    A[j] = new 
    return A
print(intercambiarFilas(A.tolist(), 0,1))


