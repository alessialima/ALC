# Ejercicio 7:
def esSimetrica(matriz: list[[]]):
    A_traspuesta = traspuesta(matriz)
    res = True 
    for i in range(len(matriz)): 
        for j in range(len(matriz)): 
            if matriz[i][j] != A_traspuesta[i][j]:
                res = False 
    return res       
print(esSimetrica(A1))  

